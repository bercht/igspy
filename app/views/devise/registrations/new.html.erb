<!-- app/views/devise/registrations/new.html.erb -->
<div class="min-h-screen flex items-center justify-center px-4" style="background-color: var(--bg-primary);">
  <div class="w-full max-w-md">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-2" style="color: var(--text-primary);">Criar Conta</h1>
      <p class="text-gray-400">Preencha seus dados para começar</p>
    </div>

    <!-- Card de Cadastro -->
    <div class="rounded-2xl p-8 shadow-xl" style="background-color: var(--bg-secondary); border: 1px solid var(--border-light);">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Nome Completo -->
        <div>
          <%= f.label :full_name, "Nome Completo", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= f.text_field :full_name, 
              autofocus: true,
              autocomplete: "name",
              placeholder: "Seu nome completo",
              class: "w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#0A7AFF]/50 transition bg-white/[0.03] text-white border border-white/[0.05]" %>
        </div>

        <!-- CPF -->
        <div>
          <%= f.label :cpf, "CPF", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= f.text_field :cpf, 
              autocomplete: "off",
              placeholder: "000.000.000-00",
              maxlength: "14",
              class: "w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#0A7AFF]/50 transition bg-white/[0.03] text-white border border-white/[0.05]" %>
          <p class="mt-1 text-xs text-gray-500">Seu CPF é usado apenas para identificação</p>
        </div>

        <!-- Telefone -->
        <div>
          <%= f.label :phone, "Telefone", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= f.text_field :phone, 
              autocomplete: "tel",
              placeholder: "(00) 00000-0000",
              maxlength: "15",
              class: "w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#0A7AFF]/50 transition bg-white/[0.03] text-white border border-white/[0.05]" %>
        </div>

        <!-- Instagram Profile -->
        <div>
          <%= f.label :instagram_profile, "Perfil do Instagram", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= f.text_field :instagram_profile, 
              autocomplete: "off",
              placeholder: "@seuperfil ou https://instagram.com/seuperfil",
              class: "w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#0A7AFF]/50 transition bg-white/[0.03] text-white border border-white/[0.05]" %>
          <p class="mt-1 text-xs text-gray-500">Link ou username do seu perfil do Instagram</p>
        </div>

        <!-- Email -->
        <div>
          <%= f.label :email, "E-mail", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= f.email_field :email, 
              autocomplete: "email",
              placeholder: "seu@email.com",
              class: "w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#0A7AFF]/50 transition bg-white/[0.03] text-white border border-white/[0.05]" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, "Senha", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= f.password_field :password, 
              autocomplete: "new-password",
              placeholder: "Mínimo #{@minimum_password_length || 6} caracteres",
              class: "w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#0A7AFF]/50 transition bg-white/[0.03] text-white border border-white/[0.05]" %>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= f.label :password_confirmation, "Confirmar Senha", class: "block text-sm font-medium mb-2 text-gray-300" %>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password",
              placeholder: "Digite a senha novamente",
              class: "w-full px-4 py-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#0A7AFF]/50 transition bg-white/[0.03] text-white border border-white/[0.05]" %>
        </div>

        <!-- Submit Button -->
        <div class="pt-2">
          <%= f.submit "Criar Conta", class: "w-full py-3 px-4 rounded-xl font-medium text-white transition-all duration-300 cursor-pointer hover:scale-[1.02] shadow-lg", style: "background: linear-gradient(135deg, #0A7AFF 0%, #3B9EFF 100%);" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 pt-6 border-t border-white/[0.05]">
        <div class="text-sm text-center">
          <%= link_to new_session_path(resource_name), class: "flex items-center justify-center space-x-2 text-gray-400 hover:text-white transition-colors group" do %>
            <span>Já tem conta?</span>
            <span class="text-[#0A7AFF] group-hover:translate-x-1 transition-transform">Fazer login</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="mt-8 text-center">
      <p class="text-xs text-gray-600">
        Análise inteligente de Instagram powered by IA
      </p>
    </div>
  </div>
</div>