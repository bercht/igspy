<div class="flex flex-col h-screen bg-gray-50" data-controller="chat" data-chat-conversation-id-value="<%= @scraping.id %>">
  
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200 px-6 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <%= link_to admin_scraping_path(@scraping), class: "text-gray-600 hover:text-gray-900" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        
        <div>
          <h1 class="text-xl font-bold text-gray-900">Chat com Assistant IA</h1>
          <p class="text-sm text-gray-600">Scraping #<%= @scraping.scraping_id %> - <%= @scraping.profile_url %></p>
        </div>
      </div>

      <div class="flex items-center space-x-2">
        <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-xs font-semibold">
          <%= @messages.count %> mensagens
        </span>
      </div>
    </div>
  </div>

  <!-- Messages Area -->
  <div class="flex-1 overflow-y-auto px-6 py-4 space-y-4" data-chat-target="messagesContainer">
    
    <!-- Welcome Message -->
    <% if @messages.empty? %>
      <div class="text-center py-12">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Bem-vindo ao Chat IA</h3>
        <p class="text-gray-600 max-w-md mx-auto">
          Faça perguntas sobre a análise do perfil <%= @scraping.profile_url %>. 
          Você pode enviar arquivos de texto ou imagens para análise adicional.
        </p>
      </div>
    <% end %>

    <!-- Existing Messages -->
    <% @messages.each do |message| %>
      <div class="flex <%= message.user? ? 'justify-end' : 'justify-start' %>" data-chat-target="message">
        <div class="<%= message.user? ? 'bg-blue-600 text-white' : 'bg-white border border-gray-200 text-gray-900' %> rounded-lg px-4 py-3 max-w-2xl shadow-sm">
          
          <!-- Message Content -->
          <div class="whitespace-pre-wrap break-words"><%= message.content %></div>
          
          <!-- Attachments -->
          <% if message.has_attachments? %>
            <div class="mt-2 space-y-1">
              <% message.message_attachments.each do |attachment| %>
                <div class="flex items-center space-x-2 text-xs <%= message.user? ? 'text-blue-100' : 'text-gray-600' %>">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                  </svg>
                  <span><%= attachment.filename %> (<%= attachment.file_size_human %>)</span>
                </div>
              <% end %>
            </div>
          <% end %>
          
          <!-- Timestamp -->
          <div class="text-xs <%= message.user? ? 'text-blue-100' : 'text-gray-500' %> mt-1">
            <%= message.created_at.strftime("%H:%M") %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Loading Indicator (hidden by default) -->
    <div class="hidden justify-start" data-chat-target="loadingIndicator">
      <div class="bg-white border border-gray-200 rounded-lg px-4 py-3 shadow-sm animate-fade-in">
        <div class="flex items-center space-x-3">
          <!-- Typing Animation -->
          <div class="flex space-x-1">
            <div class="w-2 h-2 bg-blue-600 rounded-full animate-bounce" style="animation-delay: 0ms"></div>
            <div class="w-2 h-2 bg-blue-600 rounded-full animate-bounce" style="animation-delay: 150ms"></div>
            <div class="w-2 h-2 bg-blue-600 rounded-full animate-bounce" style="animation-delay: 300ms"></div>
          </div>
          <span class="text-gray-600 text-sm">O assistente está pensando...</span>
        </div>
      </div>
    </div>

  </div>

  <!-- Input Area -->
  <div class="bg-white border-t border-gray-200 px-6 py-4">
    
    <!-- File Upload Preview (hidden by default) -->
    <div class="hidden mb-3 p-3 bg-gray-50 rounded-lg border border-gray-200" data-chat-target="filePreview">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
          </svg>
          <span class="text-sm text-gray-700" data-chat-target="fileName">arquivo.txt</span>
          <span class="text-xs text-gray-500" data-chat-target="fileSize">1.2 KB</span>
        </div>
        <button type="button" data-action="click->chat#removeFile" class="text-red-600 hover:text-red-800">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Input Form -->
    <form data-action="submit->chat#sendMessage" class="flex items-end space-x-3">
      
      <!-- File Upload Button -->
      <label class="cursor-pointer flex-shrink-0">
        <input type="file" class="hidden" data-chat-target="fileInput" data-action="change->chat#handleFileSelect" accept=".txt,.csv,.json,.png,.jpg,.jpeg">
        <div class="p-3 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
          </svg>
        </div>
      </label>

      <!-- Message Input -->
      <div class="flex-1">
        <textarea
          data-chat-target="messageInput"
          data-action="keydown->chat#handleKeydown"
          rows="1"
          placeholder="Digite sua mensagem..."
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
        ></textarea>
      </div>

      <!-- Send Button -->
      <button
        type="submit"
        data-chat-target="sendButton"
        class="flex-shrink-0 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition disabled:opacity-50 disabled:cursor-not-allowed"
      >
        Enviar
      </button>
    </form>

    <p class="text-xs text-gray-500 mt-2">
      Arquivos suportados: TXT, CSV, JSON, PNG, JPG • Máx: 10MB
    </p>
  </div>
  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fade-in 0.3s ease-out;
    }

    /* Ajuste do bounce para ficar mais suave */
    @keyframes bounce {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-8px);
      }
    }
  </style>
</div>