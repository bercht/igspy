<div class="min-h-screen bg-[#0F1419]">
  
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <!-- Subtle Grid Background -->
    <div class="absolute inset-0 opacity-[0.03]">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(10, 122, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(10, 122, 255, 0.1) 1px, transparent 1px); background-size: 100px 100px;"></div>
    </div>
    
    <!-- Minimal Gradient Accent -->
    <div class="absolute top-0 right-0 w-[600px] h-[600px] opacity-[0.08] blur-[120px]" style="background: radial-gradient(circle, #0A7AFF 0%, transparent 70%);"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-12">
      <!-- Header -->
      <div class="flex items-start justify-between mb-12">
        <div>
          <div class="inline-flex items-center space-x-2 mb-6">
            <div class="w-2 h-2 rounded-full bg-[#0A7AFF]"></div>
            <span class="text-xs font-medium tracking-wider uppercase text-gray-500">Histórico</span>
          </div>
          <h1 class="text-5xl font-light text-white mb-3 tracking-tight">
            Visualize todos os <span class="font-semibold">scrapings realizados</span>
          </h1>
          <p class="text-lg text-gray-500">
            Acompanhe o status e resultados das suas análises
          </p>
        </div>
        <div class="mt-8">
          <%= link_to admin_igspy_path, class: "inline-flex items-center space-x-2 px-6 py-3 bg-gradient-to-r from-[#0A7AFF] to-[#3B9EFF] text-white rounded-xl font-medium hover:shadow-lg hover:shadow-[#0A7AFF]/20 transition-all duration-300" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <span>Novo Scraping</span>
          <% end %>
        </div>
      </div>

      <!-- Scrapings Table -->
      <div class="group relative">
        <div class="absolute inset-0 bg-gradient-to-br from-[#0A7AFF]/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative bg-white/[0.02] backdrop-blur-sm rounded-2xl border border-white/[0.05] overflow-hidden">
          
          <% if @scrapings.any? %>
            <!-- Table -->
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-white/[0.05]">
                <thead>
                  <tr class="bg-white/[0.02]">
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Perfil</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posts</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Iniciado</th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-white/[0.05]">
                  <% @scrapings.each do |scraping| %>
                    <tr class="hover:bg-white/[0.02] transition-colors duration-200">
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="text-sm font-medium text-white">#<%= scraping.scraping_id %></span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <a href="<%= scraping.profile_url %>" target="_blank" class="text-sm text-gray-400 hover:text-[#0A7AFF] transition-colors">
                          <%= truncate(scraping.profile_url, length: 40) %>
                        </a>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="text-sm text-gray-400"><%= scraping.results_limit %></span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <% case scraping.status %>
                        <% when "pending" %>
                          <span class="px-3 py-1 rounded-lg text-xs font-medium bg-gray-500/10 text-gray-400 border border-gray-500/20">
                            PENDING
                          </span>
                        <% when "scraping", "scraped", "transcribing" %>
                          <span class="px-3 py-1 rounded-lg text-xs font-medium bg-[#0A7AFF]/10 text-[#0A7AFF] border border-[#0A7AFF]/20">
                            <%= scraping.status.upcase %>
                          </span>
                        <% when "analyzing", "transcriptions_completed" %>
                          <span class="px-3 py-1 rounded-lg text-xs font-medium bg-yellow-500/10 text-yellow-400 border border-yellow-500/20">
                            <%= scraping.status.upcase %>
                          </span>
                        <% when "completed" %>
                          <span class="px-3 py-1 rounded-lg text-xs font-medium bg-[#00D98E]/10 text-[#00D98E] border border-[#00D98E]/20">
                            COMPLETED
                          </span>
                        <% when "failed", "analysis_failed" %>
                          <span class="px-3 py-1 rounded-lg text-xs font-medium bg-red-500/10 text-red-400 border border-red-500/20">
                            <%= scraping.status.upcase %>
                          </span>
                        <% else %>
                          <span class="px-3 py-1 rounded-lg text-xs font-medium bg-gray-500/10 text-gray-400 border border-gray-500/20">
                            <%= scraping.status.upcase %>
                          </span>
                        <% end %>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="text-sm text-gray-400"><%= scraping.started_at.strftime("%d/%m/%Y %H:%M") %></span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center space-x-3">
                          <%= link_to admin_scraping_path(scraping), class: "inline-flex items-center space-x-1 text-sm font-medium text-[#0A7AFF] hover:text-[#3B9EFF] transition-colors" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <span>Ver Detalhes</span>
                          <% end %>
                          
                          <%= button_to admin_scraping_path(scraping), method: :delete, data: { turbo_confirm: "Tem certeza que deseja deletar esta análise? Esta ação não pode ser desfeita." }, class: "inline-flex items-center space-x-1 text-sm font-medium text-red-400 hover:text-red-300 transition-colors" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                            <span>Deletar</span>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          
          <% else %>
            <!-- Empty State -->
            <div class="text-center py-16 px-4">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-white/[0.03] rounded-2xl mb-6 border border-white/[0.05]">
                <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              <h3 class="text-xl font-light text-white mb-2">Nenhum scraping realizado ainda</h3>
              <p class="text-sm text-gray-500 mb-6">Comece criando sua primeira análise de perfil do Instagram</p>
              <%= link_to admin_igspy_path, class: "inline-flex items-center space-x-2 text-sm font-medium text-[#0A7AFF] hover:text-[#3B9EFF] transition-colors" do %>
                <span>Criar primeiro scraping</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              <% end %>
            </div>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>
