<div class="px-4 sm:px-0">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold text-gray-900">Histórico de Scrapings</h1>
      <p class="mt-2 text-sm text-gray-600">
        Visualize todos os scrapings realizados
      </p>
    </div>
    <div class="mt-4 md:mt-0">
      <%= link_to "Novo Scraping", admin_igspy_path, class: "bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Perfil</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posts</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Iniciado</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @scrapings.any? %>
          <% @scrapings.each do |scraping| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                #<%= scraping.scraping_id %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= truncate(scraping.profile_url, length: 40) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= scraping.results_limit %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-3 py-1 rounded-full text-xs font-semibold <%= status_badge_class(scraping.status) %>">
                  <%= scraping.status.upcase %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= scraping.started_at.strftime("%d/%m/%Y %H:%M") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "Ver Detalhes", admin_scraping_path(scraping), class: "text-blue-600 hover:text-blue-900" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-10 text-center text-gray-500">
              Nenhum scraping realizado ainda.
              <%= link_to "Criar primeiro scraping", admin_igspy_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>