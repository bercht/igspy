<div class="min-h-screen bg-[#0F1419]">
  
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <!-- Subtle Grid Background -->
    <div class="absolute inset-0 opacity-[0.03]">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(10, 122, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(10, 122, 255, 0.1) 1px, transparent 1px); background-size: 100px 100px;"></div>
    </div>
    
    <!-- Minimal Gradient Accent -->
    <div class="absolute top-0 right-0 w-[600px] h-[600px] opacity-[0.08] blur-[120px]" style="background: radial-gradient(circle, #0A7AFF 0%, transparent 70%);"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-12">
      <!-- Minimal Header -->
      <div class="mb-12">
        <div class="inline-flex items-center space-x-2 mb-6">
          <div class="w-2 h-2 rounded-full bg-[#00D98E]"></div>
          <span class="text-xs font-medium tracking-wider uppercase text-gray-500">Monitoramento de Perfil</span>
        </div>
        <h1 class="text-5xl font-light text-white mb-3 tracking-tight">
          Intelligence <span class="font-semibold">Dashboard</span>
        </h1>
        <p class="text-lg text-gray-500">
          Análise avançada de Instagram com tecnologia de IA
        </p>
      </div>

      <!-- Crescimento do Perfil - Card Expandido -->
      <div class="mb-12">
        <div class="group relative">
          <div class="absolute inset-0 bg-gradient-to-br from-[#0A7AFF]/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative bg-white/[0.02] backdrop-blur-sm rounded-2xl p-8 border border-white/[0.05] hover:border-white/10 transition-all duration-300">
            
            <% if @loading_profile_data %>
              <!-- Loading State -->
              <div class="flex flex-col items-center justify-center py-16">
                <svg class="animate-spin w-12 h-12 text-[#0A7AFF] mb-4" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="text-sm text-gray-400">Carregando dados do perfil...</p>
              </div>
            
            <% elsif @profile_stats.empty? %>
              <!-- No Instagram Profile -->
              <div class="text-center py-16">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-white/[0.03] rounded-2xl mb-6 border border-white/[0.05]">
                  <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                </div>
                <h3 class="text-xl font-light text-white mb-2">Nenhum perfil configurado</h3>
                <p class="text-sm text-gray-500 mb-6">Configure seu perfil do Instagram para começar o monitoramento</p>
                <%= link_to admin_settings_path, class: "inline-flex items-center space-x-2 text-sm font-medium text-[#0A7AFF] hover:text-[#3B9EFF] transition-colors" do %>
                  <span>Ir para Configurações</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                <% end %>
              </div>
            
            <% else %>
              <!-- Header do Card -->
              <div class="flex items-start justify-between mb-8">
                <div>
                  <div class="flex items-center space-x-3 mb-2">
                    <div class="w-10 h-10 rounded-xl bg-white/[0.03] flex items-center justify-center">
                      <svg class="w-5 h-5 text-[#0A7AFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                      </svg>
                    </div>
                    <h2 class="text-2xl font-light text-white">Crescimento do <span class="font-medium">Perfil</span></h2>
                  </div>
                  <p class="text-xs text-gray-500 uppercase tracking-wider">Monitoramento em tempo real</p>
                </div>
                <div class="text-right">
                  <p class="text-xs text-gray-500 mb-1">Última atualização</p>
                  <p class="text-sm text-gray-400"><%= @profile_stats.last.created_at.strftime('%d/%m/%Y às %H:%M') %></p>
                </div>
              </div>

              <!-- Métricas Principais - Grid 3 Colunas -->
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                
                <!-- Seguidores -->
                <div class="bg-white/[0.02] backdrop-blur-sm rounded-xl p-6 border border-white/[0.05]">
                  <div class="flex items-center justify-between mb-4">
                    <p class="text-xs text-gray-500 uppercase tracking-wider">Seguidores</p>
                    <% if @profile_stats.length >= 2 %>
                      <% f_growth = ((@profile_stats.last.followers - @profile_stats.first.followers).to_f / [@profile_stats.first.followers, 1].max * 100).round(1) %>
                      <span class="px-2 py-1 rounded-lg text-xs font-medium <%= f_growth >= 0 ? 'bg-[#00D98E]/10 text-[#00D98E] border border-[#00D98E]/20' : 'bg-red-500/10 text-red-400 border border-red-500/20' %>">
                        <%= f_growth >= 0 ? '+' : '' %><%= f_growth %>%
                      </span>
                    <% end %>
                  </div>
                  <p class="text-4xl font-light text-white mb-2"><%= number_to_human(@profile_stats.last.followers, precision: 1, significant: false, delimiter: '.', separator: ',') %></p>
                  <% if @profile_stats.length >= 2 %>
                    <% diff = @profile_stats.last.followers - @profile_stats.first.followers %>
                    <p class="text-xs <%= diff >= 0 ? 'text-[#00D98E]' : 'text-red-400' %>">
                      <%= diff >= 0 ? '+' : '' %><%= number_to_human(diff, precision: 1, significant: false, delimiter: '.', separator: ',') %> desde <%= @profile_stats.first.created_at.strftime('%d/%m') %>
                    </p>
                  <% end %>
                </div>

                <!-- Seguindo -->
                <div class="bg-white/[0.02] backdrop-blur-sm rounded-xl p-6 border border-white/[0.05]">
                  <div class="flex items-center justify-between mb-4">
                    <p class="text-xs text-gray-500 uppercase tracking-wider">Seguindo</p>
                    <% if @profile_stats.length >= 2 %>
                      <% w_growth = ((@profile_stats.last.following - @profile_stats.first.following).to_f / [@profile_stats.first.following, 1].max * 100).round(1) %>
                      <span class="px-2 py-1 rounded-lg text-xs font-medium <%= w_growth >= 0 ? 'bg-[#0A7AFF]/10 text-[#0A7AFF] border border-[#0A7AFF]/20' : 'bg-red-500/10 text-red-400 border border-red-500/20' %>">
                        <%= w_growth >= 0 ? '+' : '' %><%= w_growth %>%
                      </span>
                    <% end %>
                  </div>
                  <p class="text-4xl font-light text-white mb-2"><%= number_to_human(@profile_stats.last.following, precision: 1, significant: false, delimiter: '.', separator: ',') %></p>
                  <% if @profile_stats.length >= 2 %>
                    <% diff = @profile_stats.last.following - @profile_stats.first.following %>
                    <p class="text-xs <%= diff >= 0 ? 'text-[#0A7AFF]' : 'text-red-400' %>">
                      <%= diff >= 0 ? '+' : '' %><%= number_to_human(diff, precision: 1, significant: false, delimiter: '.', separator: ',') %> desde <%= @profile_stats.first.created_at.strftime('%d/%m') %>
                    </p>
                  <% end %>
                </div>

                <!-- Posts -->
                <div class="bg-white/[0.02] backdrop-blur-sm rounded-xl p-6 border border-white/[0.05]">
                  <div class="flex items-center justify-between mb-4">
                    <p class="text-xs text-gray-500 uppercase tracking-wider">Posts</p>
                    <% if @profile_stats.length >= 2 %>
                      <% p_growth = ((@profile_stats.last.posts - @profile_stats.first.posts).to_f / [@profile_stats.first.posts, 1].max * 100).round(1) %>
                      <span class="px-2 py-1 rounded-lg text-xs font-medium <%= p_growth >= 0 ? 'bg-purple-500/10 text-purple-400 border border-purple-500/20' : 'bg-red-500/10 text-red-400 border border-red-500/20' %>">
                        <%= p_growth >= 0 ? '+' : '' %><%= p_growth %>%
                      </span>
                    <% end %>
                  </div>
                  <p class="text-4xl font-light text-white mb-2"><%= @profile_stats.last.posts %></p>
                  <% if @profile_stats.length >= 2 %>
                    <% diff = @profile_stats.last.posts - @profile_stats.first.posts %>
                    <p class="text-xs <%= diff >= 0 ? 'text-purple-400' : 'text-red-400' %>">
                      <%= diff >= 0 ? '+' : '' %><%= diff %> <%= diff.abs == 1 ? 'post' : 'posts' %> desde <%= @profile_stats.first.created_at.strftime('%d/%m') %>
                    </p>
                  <% end %>
                </div>
              </div>

              <!-- Gráfico de Linha do Tempo -->
              <div class="bg-white/[0.02] backdrop-blur-sm rounded-xl p-6 border border-white/[0.05]">
                <div class="flex items-center justify-between mb-6">
                  <h3 class="text-sm font-medium text-white uppercase tracking-wider">Evolução de Seguidores</h3>
                  <p class="text-xs text-gray-500"><%= @profile_stats.count %> <%= @profile_stats.count == 1 ? 'registro' : 'registros' %></p>
                </div>
                
                <!-- Timeline Chart -->
                <div class="space-y-3">
                  <% @profile_stats.each_with_index do |stat, index| %>
                    <% is_first = index == 0 %>
                    <% is_last = index == @profile_stats.length - 1 %>
                    <div class="flex items-center space-x-4">
                      <!-- Data -->
                      <div class="w-16 flex-shrink-0">
                        <p class="text-xs text-gray-500"><%= stat.created_at.strftime('%d/%m') %></p>
                        <p class="text-[10px] text-gray-600"><%= stat.created_at.strftime('%H:%M') %></p>
                      </div>
                      
                      <!-- Barra de Progresso -->
                      <div class="flex-1">
                        <div class="relative h-8 bg-white/[0.03] rounded-lg overflow-hidden">
                          <div class="absolute inset-0 bg-gradient-to-r from-[#0A7AFF] to-[#3B9EFF] rounded-lg transition-all duration-500"
                               style="width: <%= (@profile_stats.map(&:followers).max > 0 ? (stat.followers.to_f / @profile_stats.map(&:followers).max * 100) : 0).round %>%">
                          </div>
                          <div class="absolute inset-0 flex items-center px-3">
                            <p class="text-xs font-medium text-white relative z-10"><%= number_to_human(stat.followers, precision: 1, significant: false, delimiter: '.', separator: ',') %></p>
                          </div>
                        </div>
                      </div>
                      
                      <!-- Variação -->
                      <div class="w-20 flex-shrink-0 text-right">
                        <% if !is_first %>
                          <% prev_stat = @profile_stats[index - 1] %>
                          <% diff = stat.followers - prev_stat.followers %>
                          <p class="text-xs font-medium <%= diff >= 0 ? 'text-[#00D98E]' : 'text-red-400' %>">
                            <%= diff >= 0 ? '+' : '' %><%= diff %>
                          </p>
                        <% else %>
                          <p class="text-xs text-gray-600">—</p>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Actions Section -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
    
    <!-- Action Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-12">
      
      <!-- New Analysis -->
      <div class="group relative">
        <div class="absolute inset-0 bg-gradient-to-br from-[#0A7AFF]/10 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative bg-white/[0.02] backdrop-blur-sm rounded-2xl p-8 border border-white/[0.05] hover:border-[#0A7AFF]/20 transition-all duration-300">
          <div class="flex items-start justify-between mb-6">
            <div class="w-12 h-12 rounded-xl bg-white/[0.03] flex items-center justify-center">
              <svg class="w-6 h-6 text-[#0A7AFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
          </div>
          <h3 class="text-xl font-light text-white mb-2">Nova Análise</h3>
          <p class="text-sm text-gray-500 mb-8 leading-relaxed">
            Inicie uma análise profunda de perfis do Instagram utilizando IA avançada para identificar padrões e tendências.
          </p>
          <%= link_to admin_igspy_path, class: "inline-flex items-center space-x-2 text-sm font-medium text-[#0A7AFF] hover:text-[#3B9EFF] transition-colors group" do %>
            <span>Começar Análise</span>
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          <% end %>
        </div>
      </div>

      <!-- History -->
      <div class="group relative">
        <div class="absolute inset-0 bg-gradient-to-br from-white/[0.02] to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative bg-white/[0.02] backdrop-blur-sm rounded-2xl p-8 border border-white/[0.05] hover:border-white/10 transition-all duration-300">
          <div class="flex items-start justify-between mb-6">
            <div class="w-12 h-12 rounded-xl bg-white/[0.03] flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <span class="text-xs text-gray-600"><%= current_user.scrapings.count %> total</span>
          </div>
          <h3 class="text-xl font-light text-white mb-2">Histórico</h3>
          <p class="text-sm text-gray-500 mb-8 leading-relaxed">
            Acesse todas as análises realizadas, acompanhe o status e visualize relatórios completos.
          </p>
          <%= link_to admin_scrapings_path, class: "inline-flex items-center space-x-2 text-sm font-medium text-gray-400 hover:text-white transition-colors group" do %>
            <span>Ver Histórico</span>
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          <% end %>
        </div>
      </div>
      <!-- Subscription Card  -->
      <div class="group relative">
        <div class="absolute inset-0 bg-gradient-to-br from-[#00D98E]/10 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="relative bg-white/[0.02] backdrop-blur-sm rounded-2xl p-8 border border-white/[0.05] hover:border-[#00D98E]/20 transition-all duration-300">
          <div class="flex items-start justify-between mb-6">
            <div class="w-12 h-12 rounded-xl bg-white/[0.03] flex items-center justify-center">
              <svg class="w-6 h-6 text-[#00D98E]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            </div>
            <% if current_user.subscribed? %>
              <span class="px-3 py-1 rounded-full text-xs font-semibold bg-[#00D98E]/10 text-[#00D98E] border border-[#00D98E]/20">
                Ativo
              </span>
            <% else %>
              <span class="px-3 py-1 rounded-full text-xs font-semibold bg-orange-500/10 text-orange-400 border border-orange-500/20">
                Inativo
              </span>
            <% end %>
          </div>
          <h3 class="text-xl font-light text-white mb-2">
            <% if current_user.subscribed? %>
              Minha Assinatura
            <% else %>
              Assine o IgSpy
            <% end %>
          </h3>
          <p class="text-sm text-gray-500 mb-8 leading-relaxed">
            <% if current_user.subscribed? %>
              Gerencie sua assinatura, métodos de pagamento e faturas.
            <% else %>
              Acesso completo a todas as funcionalidades premium do IgSpy.
            <% end %>
          </p>
          <% if current_user.subscribed? %>
            <%= link_to portal_admin_billings_path, class: "inline-flex items-center space-x-2 text-sm font-medium text-[#00D98E] hover:text-[#00F5A0] transition-colors group" do %>
              <span>Gerenciar Assinatura</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            <% end %>
          <% else %>
            <%= link_to new_admin_billing_path, class: "inline-flex items-center space-x-2 text-sm font-medium text-[#00D98E] hover:text-[#00F5A0] transition-colors group" do %>
              <span>Ver Planos</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Features -->
    <div class="bg-white/[0.02] backdrop-blur-sm rounded-2xl p-8 border border-white/[0.05]">
      <div class="flex items-center space-x-3 mb-8">
        <div class="w-1 h-6 bg-[#0A7AFF]/50 rounded-full"></div>
        <h2 class="text-lg font-light text-white">Capacidades do Sistema</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        
        <!-- Feature 1 -->
        <div class="flex items-start space-x-4">
          <div class="w-10 h-10 rounded-lg bg-white/[0.03] flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-[#0A7AFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <div>
            <h3 class="text-sm font-medium text-white mb-1">Análise Inteligente</h3>
            <p class="text-xs text-gray-500 leading-relaxed">Processamento avançado de padrões de conteúdo e métricas de engajamento</p>
          </div>
        </div>

        <!-- Feature 2 -->
        <div class="flex items-start space-x-4">
          <div class="w-10 h-10 rounded-lg bg-white/[0.03] flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <div>
            <h3 class="text-sm font-medium text-white mb-1">Assistente Virtual</h3>
            <p class="text-xs text-gray-500 leading-relaxed">Interface conversacional para exploração interativa de dados</p>
          </div>
        </div>

        <!-- Feature 3 -->
        <div class="flex items-start space-x-4">
          <div class="w-10 h-10 rounded-lg bg-white/[0.03] flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div>
            <h3 class="text-sm font-medium text-white mb-1">Métricas em Tempo Real</h3>
            <p class="text-xs text-gray-500 leading-relaxed">Monitoramento contínuo de processos e estatísticas atualizadas</p>
          </div>
        </div>

        <!-- Feature 4 -->
        <div class="flex items-start space-x-4">
          <div class="w-10 h-10 rounded-lg bg-white/[0.03] flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
            </svg>
          </div>
          <div>
            <h3 class="text-sm font-medium text-white mb-1">Recomendações Estratégicas</h3>
            <p class="text-xs text-gray-500 leading-relaxed">Sugestões de conteúdo baseadas em análise preditiva</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
