<div class="min-h-screen" style="background: linear-gradient(135deg, #0F1419 0%, #1A1F2E 50%, #252D3D 100%);">
  
  <!-- Hero Section -->
  <div class="relative overflow-hidden pb-8">
    <!-- Grid Background Effect -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute inset-0" style="background-image: linear-gradient(#0A7AFF 1px, transparent 1px), linear-gradient(90deg, #0A7AFF 1px, transparent 1px); background-size: 50px 50px;"></div>
    </div>
    
    <!-- Animated Gradient Orbs -->
    <div class="absolute top-0 left-1/4 w-96 h-96 rounded-full opacity-20 blur-3xl animate-pulse" style="background: radial-gradient(circle, #0A7AFF 0%, transparent 70%);"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 rounded-full opacity-20 blur-3xl animate-pulse" style="background: radial-gradient(circle, #7C3AED 0%, transparent 70%); animation-delay: 1s;"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-12">
      <!-- Header -->
      <div class="text-center mb-12">
        <div class="inline-flex items-center space-x-3 mb-4">
          <div class="w-3 h-3 rounded-full animate-pulse" style="background-color: #00D98E;"></div>
          <span class="text-sm font-semibold tracking-wider uppercase" style="color: #00D98E;">Sistema Ativo</span>
        </div>
        <h1 class="text-5xl font-black mb-4 bg-clip-text text-transparent" style="background-image: linear-gradient(135deg, #0A7AFF 0%, #7C3AED 50%, #00D98E 100%);">
          Intelligence Dashboard
        </h1>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          Análise de Instagram powered by <span class="font-semibold" style="color: #0A7AFF;">Inteligência Artificial</span>
        </p>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        
        <!-- Card 1: Total Users -->
        <div class="relative group">
          <div class="absolute inset-0 rounded-2xl opacity-50 blur-xl group-hover:opacity-75 transition duration-300" style="background: linear-gradient(135deg, #0A7AFF 0%, #3B9EFF 100%);"></div>
          <div class="relative bg-gray-900/50 backdrop-blur-xl rounded-2xl p-6 border border-white/10 hover:border-[#0A7AFF]/50 transition duration-300">
            <div class="flex items-center justify-between mb-4">
              <div class="w-14 h-14 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, #0A7AFF 0%, #3B9EFF 100%);">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
              </div>
              <div class="flex items-center space-x-1 text-xs font-semibold" style="color: #00D98E;">
                <span>+0%</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
              </div>
            </div>
            <div>
              <p class="text-sm text-gray-400 mb-1">Total de Usuários</p>
              <p class="text-4xl font-black text-white"><%= User.count %></p>
            </div>
          </div>
        </div>

        <!-- Card 2: System Status -->
        <div class="relative group">
          <div class="absolute inset-0 rounded-2xl opacity-50 blur-xl group-hover:opacity-75 transition duration-300" style="background: linear-gradient(135deg, #00D98E 0%, #1FE5A0 100%);"></div>
          <div class="relative bg-gray-900/50 backdrop-blur-xl rounded-2xl p-6 border border-white/10 hover:border-[#00D98E]/50 transition duration-300">
            <div class="flex items-center justify-between mb-4">
              <div class="w-14 h-14 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, #00D98E 0%, #1FE5A0 100%);">
                <svg class="w-7 h-7 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="w-3 h-3 rounded-full animate-pulse" style="background-color: #00D98E;"></div>
            </div>
            <div>
              <p class="text-sm text-gray-400 mb-1">Sistema</p>
              <p class="text-2xl font-black" style="color: #00D98E;">Ativo</p>
              <p class="text-xs text-gray-500 mt-1">99.9% uptime</p>
            </div>
          </div>
        </div>

        <!-- Card 3: AI Processing -->
        <div class="relative group">
          <div class="absolute inset-0 rounded-2xl opacity-50 blur-xl group-hover:opacity-75 transition duration-300" style="background: linear-gradient(135deg, #7C3AED 0%, #A78BFA 100%);"></div>
          <div class="relative bg-gray-900/50 backdrop-blur-xl rounded-2xl p-6 border border-white/10 hover:border-[#7C3AED]/50 transition duration-300">
            <div class="flex items-center justify-between mb-4">
              <div class="w-14 h-14 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, #7C3AED 0%, #A78BFA 100%);">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <span class="text-xs font-semibold px-3 py-1 rounded-full" style="background-color: rgba(124, 58, 237, 0.2); color: #A78BFA;">Em Breve</span>
            </div>
            <div>
              <p class="text-sm text-gray-400 mb-1">Automações IA</p>
              <p class="text-4xl font-black text-white">-</p>
            </div>
          </div>
        </div>

        <!-- Card 4: Analytics -->
        <div class="relative group">
          <div class="absolute inset-0 rounded-2xl opacity-50 blur-xl group-hover:opacity-75 transition duration-300" style="background: linear-gradient(135deg, #FFD700 0%, #FFE135 100%);"></div>
          <div class="relative bg-gray-900/50 backdrop-blur-xl rounded-2xl p-6 border border-white/10 hover:border-[#FFD700]/50 transition duration-300">
            <div class="flex items-center justify-between mb-4">
              <div class="w-14 h-14 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, #FFD700 0%, #FFE135 100%);">
                <svg class="w-7 h-7 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <span class="text-xs font-semibold px-3 py-1 rounded-full" style="background-color: rgba(255, 215, 0, 0.2); color: #FFD700;">Premium</span>
            </div>
            <div>
              <p class="text-sm text-gray-400 mb-1">Análises</p>
              <p class="text-4xl font-black text-white"><%= current_user.scrapings.completed.count %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    
    <!-- Quick Actions -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      
      <!-- Card: Start Analysis -->
      <div class="relative group">
        <div class="absolute inset-0 rounded-2xl opacity-30 blur-xl group-hover:opacity-50 transition duration-300" style="background: linear-gradient(135deg, #0A7AFF 0%, #7C3AED 100%);"></div>
        <div class="relative bg-gray-900/50 backdrop-blur-xl rounded-2xl p-8 border border-white/10 hover:border-[#0A7AFF]/50 transition duration-300">
          <div class="flex items-start justify-between mb-6">
            <div class="w-16 h-16 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, #0A7AFF 0%, #7C3AED 100%);">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <span class="px-3 py-1 rounded-full text-xs font-semibold" style="background: linear-gradient(135deg, #0A7AFF 0%, #7C3AED 100%); color: white;">Ação Rápida</span>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Iniciar Nova Análise</h3>
          <p class="text-gray-400 mb-6">
            Analise perfis do Instagram com IA avançada. Obtenha insights sobre conteúdo, engajamento e tendências.
          </p>
          <%= link_to admin_igspy_path, class: "inline-flex items-center space-x-2 px-6 py-3 rounded-xl font-semibold transition-all duration-300 group hover:scale-105", style: "background: linear-gradient(135deg, #0A7AFF 0%, #7C3AED 100%); color: white;" do %>
            <span>Começar Análise</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          <% end %>
        </div>
      </div>

      <!-- Card: Recent Scrapings -->
      <div class="relative group">
        <div class="absolute inset-0 rounded-2xl opacity-30 blur-xl group-hover:opacity-50 transition duration-300" style="background: linear-gradient(135deg, #00D98E 0%, #10B981 100%);"></div>
        <div class="relative bg-gray-900/50 backdrop-blur-xl rounded-2xl p-8 border border-white/10 hover:border-[#00D98E]/50 transition duration-300">
          <div class="flex items-start justify-between mb-6">
            <div class="w-16 h-16 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, #00D98E 0%, #10B981 100%);">
              <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <span class="text-xs font-semibold px-3 py-1 rounded-full" style="background-color: rgba(0, 217, 142, 0.2); color: #00D98E;"><%= current_user.scrapings.count %> Total</span>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Histórico de Análises</h3>
          <p class="text-gray-400 mb-6">
            Visualize todas as análises realizadas e acompanhe o progresso em tempo real.
          </p>
          <%= link_to admin_scrapings_path, class: "inline-flex items-center space-x-2 px-6 py-3 rounded-xl font-semibold border-2 transition-all duration-300 group hover:scale-105", style: "border-color: #00D98E; color: #00D98E;" do %>
            <span>Ver Histórico</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Features Grid -->
    <div class="bg-gray-900/50 backdrop-blur-xl rounded-2xl p-8 border border-white/10">
      <div class="flex items-center space-x-3 mb-8">
        <div class="w-1 h-8 rounded-full" style="background: linear-gradient(180deg, #0A7AFF 0%, #7C3AED 100%);"></div>
        <h2 class="text-2xl font-bold text-white">Recursos do Sistema</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        
        <!-- Feature 1 -->
        <div class="flex items-start space-x-4 p-4 rounded-xl bg-gray-800/30 border border-white/5 hover:border-[#0A7AFF]/30 transition duration-300">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(10, 122, 255, 0.1);">
            <svg class="w-6 h-6" style="color: #0A7AFF;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white mb-1">Análise Inteligente</h3>
            <p class="text-sm text-gray-400">IA avançada analisa padrões de conteúdo, engajamento e tendências do Instagram</p>
          </div>
        </div>

        <!-- Feature 2 -->
        <div class="flex items-start space-x-4 p-4 rounded-xl bg-gray-800/30 border border-white/5 hover:border-[#7C3AED]/30 transition duration-300">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(124, 58, 237, 0.1);">
            <svg class="w-6 h-6" style="color: #7C3AED;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white mb-1">Chat com IA</h3>
            <p class="text-sm text-gray-400">Converse com a IA sobre análises e obtenha insights personalizados</p>
          </div>
        </div>

        <!-- Feature 3 -->
        <div class="flex items-start space-x-4 p-4 rounded-xl bg-gray-800/30 border border-white/5 hover:border-[#00D98E]/30 transition duration-300">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(0, 217, 142, 0.1);">
            <svg class="w-6 h-6" style="color: #00D98E;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white mb-1">Métricas em Tempo Real</h3>
            <p class="text-sm text-gray-400">Acompanhe progresso de análises e estatísticas atualizadas</p>
          </div>
        </div>

        <!-- Feature 4 -->
        <div class="flex items-start space-x-4 p-4 rounded-xl bg-gray-800/30 border border-white/5 hover:border-[#FFD700]/30 transition duration-300">
          <div class="w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0" style="background-color: rgba(255, 215, 0, 0.1);">
            <svg class="w-6 h-6" style="color: #FFD700;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-white mb-1">Ideias de Conteúdo</h3>
            <p class="text-sm text-gray-400">Receba sugestões personalizadas baseadas em dados reais</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}
</style>
