<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  
  <!-- Header -->
  <div class="mb-12">
    <div class="inline-flex items-center space-x-2 mb-4">
      <div class="w-2 h-2 rounded-full bg-[#0A7AFF]"></div>
      <span class="text-xs font-medium tracking-wider uppercase text-gray-500">Nova An√°lise</span>
    </div>
    <h1 class="text-4xl font-light text-white mb-3">
      An√°lise de <span class="font-semibold">Perfil</span>
    </h1>
    <p class="text-lg text-gray-500">
      Configure e envie dados para automa√ß√£o via webhook n8n
    </p>
  </div>
  <!-- Demo Section -->
  <% if !current_user.subscribed? %>
    <div class="mb-8 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-2xl p-8 border border-blue-500/20">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-2xl font-semibold text-white mb-2">Exemplo de An√°lise</h2>
          <p class="text-gray-400">Veja uma an√°lise real de um perfil p√∫blico</p>
        </div>
        <%= link_to new_admin_billing_path, class: "px-6 py-3 rounded-xl font-medium text-white transition-all duration-300 hover:scale-105 shadow-lg", style: "background: linear-gradient(135deg, #0A7AFF 0%, #3B9EFF 100%);" do %>
          Analisar qualquer perfil agora ‚Üí
        <% end %>      
      </div>
      
      <% if @demo_scraping = DemoScraping.fetch_demo %>
        <div class="bg-white/5 rounded-xl p-6">
          <div class="flex items-center space-x-4 mb-4">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white text-2xl font-bold">
              <%= @demo_scraping.profile_data['username']&.first&.upcase || 'A' %>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-white"><%= @demo_scraping.profile_data['full_name'] || 'Perfil Demo' %></h3>
              <p class="text-gray-400">@<%= @demo_scraping.profile_username %></p>
            </div>
          </div>
          
          <div class="prose prose-invert max-w-none">
            <p class="text-gray-300"><%= @demo_scraping.cached_analysis['analysis_text']&.truncate(300) || 'An√°lise de demonstra√ß√£o' %></p>
          </div>
          
          <div class="mt-6 pt-6 border-t border-white/10">
            <p class="text-sm text-gray-500 text-center">
              üîí Esta √© uma pr√©via. Assine para analisar qualquer perfil e obter insights completos.
            </p>
          </div>
        </div>
      <% else %>
        <div class="bg-white/5 rounded-xl p-6 text-center">
          <p class="text-gray-400">Demo em breve...</p>
        </div>
      <% end %>
    </div>
  <% end %>
  <!-- Grid Layout -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    
    <!-- Form Card -->
    <div class="lg:col-span-2">
      <div class="relative bg-white/[0.02] backdrop-blur-sm rounded-2xl p-8 border border-white/[0.05]" data-controller="igspy-form">
        <%= form_with(url: admin_igspy_path, method: :post, data: { igspy_form_target: "form", action: "submit->igspy-form#submit" }, class: "space-y-8") do |f| %>
          
          <!-- URL do Perfil -->
          <div>
            <%= f.label :igspy_profile_url, "URL do Perfil Instagram", class: "block text-xs font-medium text-gray-400 mb-3 uppercase tracking-wider" %>
            <%= f.text_field :igspy_profile_url, 
                placeholder: "https://www.instagram.com/username/", 
                class: "w-full px-4 py-4 bg-white/[0.03] border border-white/[0.05] rounded-xl text-white placeholder-gray-600 focus:outline-none focus:border-[#0A7AFF]/50 focus:ring-1 focus:ring-[#0A7AFF]/50 transition-all duration-300",
                data: { igspy_form_target: "profileUrl" },
                required: true %>
            <p class="mt-2 text-xs text-gray-600">Cole a URL completa do perfil do Instagram</p>
          </div>

          <!-- N√∫mero de Postagens -->
          <div>
            <%= f.label :igspy_results_limit, "N√∫mero de Postagens a Extrair", class: "block text-xs font-medium text-gray-400 mb-3 uppercase tracking-wider" %>
            <%= f.number_field :igspy_results_limit, 
                value: 10,
                min: 1,
                max: 100,
                class: "w-full px-4 py-4 bg-white/[0.03] border border-white/[0.05] rounded-xl text-white placeholder-gray-600 focus:outline-none focus:border-[#0A7AFF]/50 focus:ring-1 focus:ring-[#0A7AFF]/50 transition-all duration-300",
                data: { igspy_form_target: "resultsLimit" },
                required: true %>
            <p class="mt-2 text-xs text-gray-600">M√≠nimo: 1 | M√°ximo: 100</p>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <%= f.submit "Iniciar An√°lise", 
                class: "w-full py-4 px-6 rounded-xl font-medium text-white transition-all duration-300 cursor-pointer hover:scale-[1.02] shadow-lg disabled:opacity-50 disabled:cursor-not-allowed",
                style: "background: linear-gradient(135deg, #0A7AFF 0%, #3B9EFF 100%);",
                data: { igspy_form_target: "submitButton" } %>
            
            <span class="hidden text-sm text-gray-500 mt-3 flex items-center justify-center" data-igspy-form-target="loadingText">
              <svg class="animate-spin w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Processando...
            </span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Info Card -->
    <div class="lg:col-span-1 space-y-6">
      
      <!-- Como Funciona -->
      <div class="bg-white/[0.02] backdrop-blur-sm rounded-2xl p-6 border border-white/[0.05]">
        <div class="flex items-center space-x-2 mb-6">
          <div class="w-8 h-8 rounded-lg bg-white/[0.03] flex items-center justify-center">
            <svg class="w-4 h-4 text-[#0A7AFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-sm font-medium text-white">Como Funciona</h3>
        </div>
        <ol class="space-y-4">
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-6 h-6 rounded-full bg-[#0A7AFF]/10 text-[#0A7AFF] text-xs font-semibold flex items-center justify-center">1</span>
            <p class="text-sm text-gray-400 leading-relaxed">Cole a URL completa do perfil Instagram</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-6 h-6 rounded-full bg-[#0A7AFF]/10 text-[#0A7AFF] text-xs font-semibold flex items-center justify-center">2</span>
            <p class="text-sm text-gray-400 leading-relaxed">Defina quantas postagens quer extrair (1-100)</p>
          </li>
          <li class="flex items-start space-x-3">
            <span class="flex-shrink-0 w-6 h-6 rounded-full bg-[#0A7AFF]/10 text-[#0A7AFF] text-xs font-semibold flex items-center justify-center">3</span>
            <p class="text-sm text-gray-400 leading-relaxed">Clique em "Iniciar An√°lise" e aguarde o processamento</p>
          </li>
        </ol>
      </div>

      <!-- An√°lises Recentes -->
      <% if @recent_scrapings.any? %>
        <div class="bg-white/[0.02] backdrop-blur-sm rounded-2xl p-6 border border-white/[0.05]">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-sm font-medium text-white">An√°lises Recentes</h3>
            <%= link_to admin_scrapings_path, class: "text-xs text-[#0A7AFF] hover:text-[#3B9EFF] transition-colors" do %>
              Ver todas ‚Üí
            <% end %>
          </div>
          <div class="space-y-3">
            <% @recent_scrapings.first(3).each do |scraping| %>
              <%= link_to admin_scraping_path(scraping), class: "block p-3 rounded-lg bg-white/[0.02] border border-white/[0.05] hover:border-white/10 transition-all duration-200 group" do %>
                <div class="flex items-center justify-between mb-2">
                  <span class="text-xs text-gray-500">#<%= scraping.scraping_id %></span>
                  <span class="text-[10px] px-2 py-1 rounded-full <%= scraping.completed? ? 'bg-[#00D98E]/10 text-[#00D98E]' : scraping.failed? ? 'bg-red-500/10 text-red-500' : 'bg-[#0A7AFF]/10 text-[#0A7AFF]' %>">
                    <%= scraping.status.upcase %>
                  </span>
                </div>
                <p class="text-xs text-gray-400 truncate group-hover:text-gray-300 transition-colors">
                  <%= scraping.profile_url %>
                </p>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Stats -->
      <div class="bg-white/[0.02] backdrop-blur-sm rounded-2xl p-6 border border-white/[0.05]">
        <div class="flex items-center space-x-3 mb-4">
          <div class="w-8 h-8 rounded-lg bg-white/[0.03] flex items-center justify-center">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div>
            <p class="text-xs text-gray-500">Total de An√°lises</p>
            <p class="text-2xl font-light text-white"><%= current_user.scrapings.count %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
