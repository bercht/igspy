<section class="py-24 relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-gradient-to-r from-[#0A7AFF]/20 via-[#00D98E]/20 to-[#0A7AFF]/20"></div>
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-[#00D98E]/30 rounded-full blur-[120px]"></div>
  <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-[#0A7AFF]/30 rounded-full blur-[120px]"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="glass rounded-3xl p-12 md:p-16 border border-[#3A4452] text-center">
        <h2 class="text-3xl md:text-5xl font-black mb-6 text-white">
          Crie conteúdo com base no que já funciona.
          <span class="block text-gradient bg-gradient-to-r from-[#00D98E] to-[#0A7AFF] bg-clip-text text-transparent mt-2">Pare de apostar. Comece a decidir.</span>
        </h2>
        
        <p class="text-lg md:text-xl text-[#A1A5B0] max-w-2xl mx-auto mb-10">
          Analise perfis concorrentes, entenda padrões de sucesso e crie conteúdo estratégico com ajuda da IA.
        </p>

        <!-- Pricing Box -->
        <div class="inline-block bg-gradient-to-br from-[#1A1F2E] to-[#16161F] rounded-2xl p-8 border border-[#3A4452] mb-8">
          <div class="flex items-baseline justify-center gap-2 mb-4">
            <span class="text-5xl md:text-6xl font-black text-gradient bg-gradient-to-r from-[#00D98E] to-[#0A7AFF] bg-clip-text text-transparent">R$ 49</span>
            <span class="text-[#A1A5B0] text-xl">/mês</span>
          </div>
          
          <!-- Benefits -->
          <div class="space-y-3 mb-8 text-left max-w-md mx-auto">
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-[#00D98E] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-[#E5E7EB]">Análise ilimitada de perfis</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-[#00D98E] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-[#E5E7EB]">Agente de IA dedicado</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-[#00D98E] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-[#E5E7EB]">Gerador de ideias e ajustes</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-[#00D98E] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-[#E5E7EB]">Insights de padrões vencedores</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-[#00D98E] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-[#E5E7EB]">Cancele quando quiser</span>
            </div>
          </div>

          <%= link_to new_user_registration_path, class: "group inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-[#00D98E] to-[#0A7AFF] text-[#0F1419] rounded-lg font-bold text-lg hover:shadow-2xl hover:shadow-[#00D98E]/50 transition-all" do %>
            Assinar agora por R$49/mês
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-[#A1A5B0]">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#00D98E]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Sem fidelidade</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#00D98E]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Cancelamento fácil</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#00D98E]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Foco total em Instagram</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
